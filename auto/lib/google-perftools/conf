atm_feature="Google perftools"
atm_feature_name=
atm_feature_run=no
atm_feature_incs=
atm_feature_path=
atm_feature_libs="-lprofiler"
atm_feature_test="ProfilerStop()"
. auto/feature


if [ $atm_found = no ]; then

    # FreeBSD port

    atm_feature="Google perftools in /usr/local/"

    if [ $ATM_RPATH = YES ]; then
        atm_feature_libs="-R/usr/local/lib -L/usr/local/lib -lprofiler"
    else
        atm_feature_libs="-L/usr/local/lib -lprofiler"
    fi

    . auto/feature
fi


if [ $atm_found = no ]; then

    # MacPorts

    atm_feature="Google perftools in /opt/local/"

    if [ $ATM_RPATH = YES ]; then
        atm_feature_libs="-R/opt/local/lib -L/opt/local/lib -lprofiler"
    else
        atm_feature_libs="-L/opt/local/lib -lprofiler"
    fi

    . auto/feature
fi


if [ $atm_found = yes ]; then
    CORE_LIBS="$CORE_LIBS $atm_feature_libs"

else

cat << END

$0: error: the Google perftools module requires the Google perftools
library. You can either do not enable the module or install the library.

END

    exit 1
fi
