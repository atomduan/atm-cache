#!/bin/bash -

curr=$(cd `dirname $(which $0)`; pwd)

cd $curr

name="$1"
name=${name:-module.c}
name=$(echo $name | sed 's/\.c//g')
name=$(echo $name | sed 's/\.//g')

rm Makefile

cat <<END > Makefile
CC = gcc
CFLAGS = -c -pipe -fPIC -shared -O0 -W -Wall -Wpointer-arith -Wno-unused-parameter -Werror -g

LINK = \$(CC)

BUILD_DEPS = module_utils.h

BUILD_INCS = -I ./ \\
	-I ../../src/os/unix/linux \\
	-I ../../build \\
	-I ../../deps/jemalloc/include/jemalloc


END

if [ ${name} != "module_utils" ]; then
cat <<END >> Makefile
${name}:	${name}.o \\
	module_utils.o

	\$(LINK) -o ${name}.so ${name}.o \\
	module_utils.o \\
	-ldl \\
	-lpthread \\
	-lpython2.7 \\
	-Wl,-E


${name}.o:	\$(BUILD_DEPS)
	\$(CC) \$(CFLAGS) \$(BUILD_INCS) -o ${name}.o ${name}.c


END
fi


cat <<END >> Makefile
module_utils.o:	\$(BUILD_DEPS)
	\$(CC) \$(CFLAGS) \$(BUILD_INCS) -o module_utils.o module_utils.c


END


cat <<END > setup.py
from distutils.core import setup, Extension

module1 = Extension(
    '${name}', 
    include_dirs = ['/usr/local/include',\\
        './',\\
        '../../src/os/unix/linux',\\
        '../../build',\\
        '../../deps/jemalloc/include/jemalloc'],
    libraries = ['pthread','python2.7','dl'],
    sources = ['${name}.c'])

setup (name = 'PackageName',
    version = '1.0',
    description = 'This is a demo package',
    ext_modules = [module1])
END

cat <<END >> Makefile
.PHONY:clean
clean:
	rm -r *.o *.so
END

if ! [ -d "../../build" ]; then
    (cd ../../; ./configure)
fi
