have=ATM_SOLARIS . auto/have_headers

CORE_INCS="$UNIX_INCS"
CORE_DEPS="$UNIX_DEPS $SOLARIS_DEPS"
CORE_SRCS="$UNIX_SRCS $SOLARIS_SRCS "
CORE_LIBS="$CORE_LIBS -lsocket -lnsl"

ATM_RPATH=YES

# Solaris's make does not support a blank line between target and rules
atm_spacer=

CC_AUX_FLAGS="$CC_AUX_FLAGS -D_FILE_OFFSET_BITS=64 -lsocket -lnsl"


if [ $ZLIB_ASM != NO ]; then
    echo "$0: error: the --with-zlib-asm=CPU option is not supported"
    echo "on that platform"
    echo

    exit 1
fi


atm_feature="sendfilev()"
atm_feature_name="ATM_HAVE_SENDFILE"
atm_feature_run=no
atm_feature_incs="#include <sys/sendfile.h>"
atm_feature_path=
atm_feature_libs="-lsendfile"
atm_feature_test="int fd = 1; sendfilevec_t vec[1];
                  size_t sent; ssize_t n;
                  n = sendfilev(fd, vec, 1, &sent);
                  if (n == -1) return 1"
. auto/feature


if [ $atm_found = yes ]; then
    CORE_SRCS="$CORE_SRCS $SOLARIS_SENDFILEV_SRCS"
    CORE_LIBS="$CORE_LIBS -lsendfile"
fi


atm_feature="event ports"
atm_feature_name="ATM_HAVE_EVENTPORT"
atm_feature_run=no
atm_feature_incs="#include <port.h>"
atm_feature_path=
atm_feature_libs=
atm_feature_test="(void) port_create()"
. auto/feature

if [ $atm_found = yes ]; then
    CORE_SRCS="$CORE_SRCS $EVENTPORT_SRCS"
    EVENT_MODULES="$EVENT_MODULES $EVENTPORT_MODULE"
fi
