echo
echo "Configuration summary"


if [ $USE_THREADS = YES ]; then
    echo "  + using threads"
fi

if [ $USE_PCRE = DISABLED ]; then
    echo "  + PCRE library is disabled"

else
    case $PCRE in
        YES)   echo "  + using system PCRE library" ;;
        NONE)  echo "  + PCRE library is not used" ;;
        *)     echo "  + using PCRE library: $PCRE" ;;
    esac
fi

case $OPENSSL in
    YES)   echo "  + using system OpenSSL library" ;;
    NONE)  echo "  + OpenSSL library is not used" ;;
    *)     echo "  + using OpenSSL library: $OPENSSL" ;;
esac

case $ZLIB in
    YES)   echo "  + using system zlib library" ;;
    NONE)  echo "  + zlib library is not used" ;;
    *)     echo "  + using zlib library: $ZLIB" ;;
esac

case $ATM_LIBATOMIC in
    YES)   echo "  + using system libatomic_ops library" ;;
    NO)    ;; # not used
    *)     echo "  + using libatomic_ops library: $ATM_LIBATOMIC" ;;
esac

echo


cat << END
  atmcache path prefix: "$ATM_PREFIX"
  atmcache binary file: "$ATM_SBIN_PATH"
  atmcache modules path: "$ATM_MODULES_PATH"
  atmcache configuration prefix: "$ATM_CONF_PREFIX"
  atmcache configuration file: "$ATM_CONF_PATH"
  atmcache pid file: "$ATM_PID_PATH"
END

if test -n "$ATM_ERROR_LOG_PATH"; then
    echo "  atmcache error log file: \"$ATM_ERROR_LOG_PATH\""
else
    echo "  atmcache logs errors to stderr"
fi

cat << END
  atmcache http access log file: "$ATM_HTTP_LOG_PATH"
  atmcache http client request body temporary files: "$ATM_HTTP_CLIENT_TEMP_PATH"
END

if [ $HTTP_PROXY = YES ]; then
    echo "  atmcache http proxy temporary files: \"$ATM_HTTP_PROXY_TEMP_PATH\""
fi

if [ $HTTP_FASTCGI = YES ]; then
    echo "  atmcache http fastcgi temporary files: \"$ATM_HTTP_FASTCGI_TEMP_PATH\""
fi

if [ $HTTP_UWSGI = YES ]; then
    echo "  atmcache http uwsgi temporary files: \"$ATM_HTTP_UWSGI_TEMP_PATH\""
fi

if [ $HTTP_SCGI = YES ]; then
    echo "  atmcache http scgi temporary files: \"$ATM_HTTP_SCGI_TEMP_PATH\""
fi

echo "$ATM_POST_CONF_MSG"
