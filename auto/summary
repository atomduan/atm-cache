echo
echo "Configuration summary"


if [ $USE_THREADS = YES ]; then
    echo "  + using threads"
fi

case $ATM_LIBATOMIC in
    YES)   echo "  + using system libatomic_ops library" ;;
    NO)    ;; # not used
    *)     echo "  + using libatomic_ops library: $ATM_LIBATOMIC" ;;
esac

echo


cat << END

  platform info: "$ATM_SYSTEM $ATM_RELEASE $ATM_MACHINE"

  atmcache path prefix: "$ATM_PREFIX"
  atmcache binary file: "$ATM_PREFIX/$ATM_SBIN_PATH"
  atmcache configuration prefix: "$ATM_CONF_PREFIX"
  atmcache configuration file: "$ATM_PREFIX/$ATM_CONF_PATH"
  atmcache pid file: "$ATM_PREFIX/$ATM_PID_PATH"
END

if test -n "$ATM_ERROR_LOG_PATH"; then
    echo "  atmcache error log file: \"$ATM_PREFIX/$ATM_ERROR_LOG_PATH\""
else
    echo "  atmcache logs errors to stderr"
fi

echo "$ATM_POST_CONF_MSG"
