cat << END                                            >> $ATM_MAKEFILE

$ATM_LIBATOMIC/src/libatomic_ops.a:	$ATM_LIBATOMIC/Makefile
	cd $ATM_LIBATOMIC && \$(MAKE)

$ATM_LIBATOMIC/Makefile:	$ATM_MAKEFILE
	cd $ATM_LIBATOMIC \\
	&& if [ -f Makefile ]; then \$(MAKE) distclean; fi \\
	&& ./configure

END
