if [ $PCRE != NONE ]; then
    CORE_INCS="$CORE_INCS $PCRE"

    case "$ATM_CC_NAME" in

        msvc | owc | bcc)
            have=ATM_PCRE . auto/have
            have=PCRE_STATIC . auto/have
            CORE_DEPS="$CORE_DEPS $PCRE/pcre.h"
            LINK_DEPS="$LINK_DEPS $PCRE/pcre.lib"
            CORE_LIBS="$CORE_LIBS $PCRE/pcre.lib"
        ;;

        icc)
            have=ATM_PCRE . auto/have
            CORE_DEPS="$CORE_DEPS $PCRE/pcre.h"

            LINK_DEPS="$LINK_DEPS $PCRE/.libs/libpcre.a"

            echo $atm_n "checking for PCRE library ...$atm_c"

            if [ -f $PCRE/pcre.h ]; then
                atm_pcre_ver=`grep PCRE_MAJOR $PCRE/pcre.h \
                              | sed -e 's/^.*PCRE_MAJOR.* \(.*\)$/\1/'`

            else if [ -f $PCRE/configure.in ]; then
                atm_pcre_ver=`grep PCRE_MAJOR= $PCRE/configure.in \
                              | sed -e 's/^.*=\(.*\)$/\1/'`

            else
                atm_pcre_ver=`grep pcre_major, $PCRE/configure.ac \
                              | sed -e 's/^.*pcre_major,.*\[\(.*\)\].*$/\1/'`
            fi
            fi

            echo " $atm_pcre_ver major version found"

            # to allow -ipo optimization we link with the *.o but not library

            case "$atm_pcre_ver" in
                4|5)
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre.o"
                ;;

                6)
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_chartables.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_compile.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_exec.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_fullinfo.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_globals.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_tables.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_try_flipped.o"
                ;;

                *)
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_chartables.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_compile.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_exec.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_fullinfo.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_globals.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_tables.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_try_flipped.o"
                    CORE_LIBS="$CORE_LIBS $PCRE/pcre_newline.o"
                ;;

            esac
        ;;

        *)
            have=ATM_PCRE . auto/have

            if [ "$ATM_PLATFORM" = win32 ]; then
                have=PCRE_STATIC . auto/have
            fi

            CORE_DEPS="$CORE_DEPS $PCRE/pcre.h"
            LINK_DEPS="$LINK_DEPS $PCRE/.libs/libpcre.a"
            CORE_LIBS="$CORE_LIBS $PCRE/.libs/libpcre.a"
        ;;

    esac


    if [ $PCRE_JIT = YES ]; then
        have=ATM_HAVE_PCRE_JIT . auto/have
        PCRE_CONF_OPT="$PCRE_CONF_OPT --enable-jit"
    fi

else

    if [ "$ATM_PLATFORM" != win32 ]; then

        PCRE=NO

        atm_feature="PCRE library"
        atm_feature_name="ATM_PCRE"
        atm_feature_run=no
        atm_feature_incs="#include <pcre.h>"
        atm_feature_path=
        atm_feature_libs="-lpcre"
        atm_feature_test="pcre *re;
                          re = pcre_compile(NULL, 0, NULL, 0, NULL);
                          if (re == NULL) return 1"
        . auto/feature

        if [ $atm_found = no ]; then

            # FreeBSD port

            atm_feature="PCRE library in /usr/local/"
            atm_feature_path="/usr/local/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/usr/local/lib -L/usr/local/lib -lpcre"
            else
                atm_feature_libs="-L/usr/local/lib -lpcre"
            fi

            . auto/feature
        fi

        if [ $atm_found = no ]; then

            # RedHat RPM, Solaris package

            atm_feature="PCRE library in /usr/include/pcre/"
            atm_feature_path="/usr/include/pcre"
            atm_feature_libs="-lpcre"

            . auto/feature
        fi

        if [ $atm_found = no ]; then

            # NetBSD port

            atm_feature="PCRE library in /usr/pkg/"
            atm_feature_path="/usr/pkg/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/usr/pkg/lib -L/usr/pkg/lib -lpcre"
            else
                atm_feature_libs="-L/usr/pkg/lib -lpcre"
            fi

            . auto/feature
        fi

        if [ $atm_found = no ]; then

            # MacPorts

            atm_feature="PCRE library in /opt/local/"
            atm_feature_path="/opt/local/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/opt/local/lib -L/opt/local/lib -lpcre"
            else
                atm_feature_libs="-L/opt/local/lib -lpcre"
            fi

            . auto/feature
        fi

        if [ $atm_found = yes ]; then
            CORE_INCS="$CORE_INCS $atm_feature_path"
            CORE_LIBS="$CORE_LIBS $atm_feature_libs"
            PCRE=YES
        fi

        if [ $PCRE = YES ]; then
            atm_feature="PCRE JIT support"
            atm_feature_name="ATM_HAVE_PCRE_JIT"
            atm_feature_test="int jit = 0;
                              pcre_free_study(NULL);
                              pcre_config(PCRE_CONFIG_JIT, &jit);
                              if (jit != 1) return 1;"
            . auto/feature

            if [ $atm_found = yes ]; then
                PCRE_JIT=YES
            fi
        fi
    fi

    if [ $PCRE != YES ]; then
cat << END

$0: error: the HTTP rewrite module requires the PCRE library.
You can either disable the module by using --without-http_rewrite_module
option, or install the PCRE library into the system, or build the PCRE library
statically from the source with atmcache by using --with-pcre=<path> option.

END
        exit 1
    fi

fi
