#!/bin/sh
#Example:
#gcc -I option: 
#   CORE_INCS="$CORE_INCS $OPENSSL/.openssl/include"
#gcc file plus these dep files to make each .c file target .o: 
#   CORE_DEPS="$CORE_DEPS $OPENSSL/.openssl/include/openssl/ssl.h"
#gcc lib option. .a -R -L can be here 
#   CORE_LIBS="$CORE_LIBS $OPENSSL/.openssl/lib/libssl.a"

CORE_INCS="src/core"

CORE_DEPS="src/core/atm_main.h \
           src/core/atm_config.h \
           src/core/atm_types.h \
           src/core/atm_core.h \
           src/core/atm_dict.h \
           src/core/atm_hash.h \
           src/core/atm_siphash.h \
           src/core/atm_list.h \
           src/core/atm_log.h \
           src/core/atm_string.h"

CORE_SRCS="src/core/atm_main.c \
           src/core/atm_dict.c \
           src/core/atm_hash.c \
           src/core/atm_siphash.c \
           src/core/atm_list.c \
           src/core/atm_log.c \
           src/core/atm_string.c"

CORE_LIBS=""

#------------------------------------------------------
#TEST SRC Config
if [ $ATM_UNIT_TEST = YES ]; then
    CORE_INCS="$CORE_INCS src/test \
               src/test/core \
               src/test/os \
               src/test/os/unix"

    CORE_DEPS="$CORE_DEPS src/test/atm_unit_test.h \
               src/test/core/atm_test_dict.h \
               src/test/core/atm_test_siphash.h \
               src/test/os/unix/atm_test_process.h"

    CORE_SRCS="$CORE_SRCS src/test/atm_unit_test.c \
               src/test/core/atm_test_dict.c \
               src/test/core/atm_test_siphash.c \
               src/test/os/unix/atm_test_process.c"
fi

#------------------------------------------------------
#CONFIG OS TYPE DIFFERENCE SOURCE, 
#NOTE: OS SRC settings are configed in auto/os/conf and sub confs.
OS_INCS="src/os \
         src/os/unix"
OS_DEPS="src/os/unix/atm_process.h \
         src/os/unix/atm_alloc.h"
OS_SRCS="src/os/unix/atm_process.c \
         src/os/unix/atm_alloc.c"
OS_LIBS=""

#Linux
OS_LINUX_INCS="$OS_INCS src/os/unix/linux"
OS_LINUX_DEPS="$OS_DEPS src/os/unix/linux/atm_linux_config.h"
OS_LINUX_SRCS="$OS_SRCS"
OS_LINUX_LIBS="$OS_LIBS"

#Darwin
OS_DARWIN_INCS="$OS_INCS src/os/unix/darwin"
OS_DARWIN_DEPS="$OS_DEPS src/os/unix/darwin/atm_darwin_config.h"
OS_DARWIN_SRCS="$OS_SRCS"
OS_DARWIN_LIBS="$OS_LIBS"
