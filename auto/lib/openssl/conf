if [ $OPENSSL != NONE ]; then

    case "$CC" in

        cl | bcc32)
            have=ATM_OPENSSL . auto/have
            have=ATM_SSL . auto/have

            CFLAGS="$CFLAGS -DNO_SYS_TYPES_H"

            CORE_INCS="$CORE_INCS $OPENSSL/openssl/include"
            CORE_DEPS="$CORE_DEPS $OPENSSL/openssl/include/openssl/ssl.h"

            if [ -f $OPENSSL/ms/do_ms.bat ]; then
                # before OpenSSL 1.1.0
                CORE_LIBS="$CORE_LIBS $OPENSSL/openssl/lib/ssleay32.lib"
                CORE_LIBS="$CORE_LIBS $OPENSSL/openssl/lib/libeay32.lib"
            else
                # OpenSSL 1.1.0+
                CORE_LIBS="$CORE_LIBS $OPENSSL/openssl/lib/libssl.lib"
                CORE_LIBS="$CORE_LIBS $OPENSSL/openssl/lib/libcrypto.lib"
            fi

            # libeay32.lib requires gdi32.lib
            CORE_LIBS="$CORE_LIBS gdi32.lib"
            # OpenSSL 1.0.0 requires crypt32.lib
            CORE_LIBS="$CORE_LIBS crypt32.lib"
        ;;

        *)
            have=ATM_OPENSSL . auto/have
            have=ATM_SSL . auto/have

            CORE_INCS="$CORE_INCS $OPENSSL/.openssl/include"
            CORE_DEPS="$CORE_DEPS $OPENSSL/.openssl/include/openssl/ssl.h"
            CORE_LIBS="$CORE_LIBS $OPENSSL/.openssl/lib/libssl.a"
            CORE_LIBS="$CORE_LIBS $OPENSSL/.openssl/lib/libcrypto.a"
            CORE_LIBS="$CORE_LIBS $ATM_LIBDL"

            if [ "$ATM_PLATFORM" = win32 ]; then
                CORE_LIBS="$CORE_LIBS -lgdi32 -lcrypt32 -lws2_32"
            fi
        ;;
    esac

else

    if [ "$ATM_PLATFORM" != win32 ]; then

        OPENSSL=NO

        atm_feature="OpenSSL library"
        atm_feature_name="ATM_OPENSSL"
        atm_feature_run=no
        atm_feature_incs="#include <openssl/ssl.h>"
        atm_feature_path=
        atm_feature_libs="-lssl -lcrypto $ATM_LIBDL"
        atm_feature_test="SSL_CTX_set_options(NULL, 0)"
        . auto/feature

        if [ $atm_found = no ]; then

            # FreeBSD port

            atm_feature="OpenSSL library in /usr/local/"
            atm_feature_path="/usr/local/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/usr/local/lib -L/usr/local/lib -lssl -lcrypto $ATM_LIBDL"
            else
                atm_feature_libs="-L/usr/local/lib -lssl -lcrypto $ATM_LIBDL"
            fi

            . auto/feature
        fi

        if [ $atm_found = no ]; then

            # NetBSD port

            atm_feature="OpenSSL library in /usr/pkg/"
            atm_feature_path="/usr/pkg/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/usr/pkg/lib -L/usr/pkg/lib -lssl -lcrypto $ATM_LIBDL"
            else
                atm_feature_libs="-L/usr/pkg/lib -lssl -lcrypto $ATM_LIBDL"
            fi

            . auto/feature
        fi

        if [ $atm_found = no ]; then

            # MacPorts

            atm_feature="OpenSSL library in /opt/local/"
            atm_feature_path="/opt/local/include"

            if [ $ATM_RPATH = YES ]; then
                atm_feature_libs="-R/opt/local/lib -L/opt/local/lib -lssl -lcrypto $ATM_LIBDL"
            else
                atm_feature_libs="-L/opt/local/lib -lssl -lcrypto $ATM_LIBDL"
            fi

            . auto/feature
        fi

        if [ $atm_found = yes ]; then
            have=ATM_SSL . auto/have
            CORE_INCS="$CORE_INCS $atm_feature_path"
            CORE_LIBS="$CORE_LIBS $atm_feature_libs"
            OPENSSL=YES
        fi
    fi

    if [ $OPENSSL != YES ]; then

cat << END

$0: error: SSL modules require the OpenSSL library.
You can either do not enable the modules, or install the OpenSSL library
into the system, or build the OpenSSL library statically from the source
with atmcache by using --with-openssl=<path> option.

END
        exit 1
    fi

fi
